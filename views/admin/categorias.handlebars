<div class="flex-center">
    <div class="limite secao-destaque">
        <div class="chamadas">
            <h2>Os melhores produtos para você</h2>
        </div>
        <div class="flex-start cor flex-warp">
            {{#each produtos}}
                <div class="card-produto">
                    <div class="img-produto">
                        <img src="{{imagem}}" alt="Imagem de celular">
                    </div>
                    <div class="textos-produto">
                        <div class="descri-produto">
                            <p>{{titulo}}</p>
                        </div>
                        <div class="preco-produto">
                            <p>R$ {{preco}}</p>
                            <span class="preco-produto-avista">em 1x no cartão ou boleto</span>
                        </div>
                    </div>
                    <div class="btn-produto">
                        <button class="comprar-btn" onclick="window.location='/produtounico/{{id}}'">Comprar</button>
                        <button class="car-btn"  onclick="window.location='/carrinho/{{id}}'">Adicionar ao carrinho</button>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
</div>
